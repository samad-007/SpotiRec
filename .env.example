# SpotiRec Environment Variables
# Copy this file to .env and fill in your actual values

# Spotify API Credentials
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/callback

# MongoDB Connection
# Get this from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/recommender?retryWrites=true&w=majority

# Session Secret
# Generate a random string (e.g., keyboard mashing or use: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=your_random_session_secret_here

# Server Port
PORT=3000
